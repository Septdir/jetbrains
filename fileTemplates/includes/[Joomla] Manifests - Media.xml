#if (${media})
	<media destination="$extension" folder="media">
	    #if($media.contains("css"))
			<folder>css</folder>
		#end
		#if($media.contains("js"))
			<folder>js</folder>
		#end
		#if($media.contains("im"))
			<folder>images</folder>
		#end
		<filename>joomla.asset.json</filename>
	</media>
#end